{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["es2022"],

    "rootDir": "./src",
    "outDir": "./dist",

    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,

    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.ts"]
}
